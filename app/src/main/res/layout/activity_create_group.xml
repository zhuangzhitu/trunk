<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <cn.cassan.pm.widget.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white40"
        android:clickable="true"
        app:ImageLeft="@drawable/rp_back_arrow_white"
        app:TextLeft="@string/btnBack"
        app:TitleText="@string/createGroup"/>

    <EditText
        android:id="@+id/groupName"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/titleview"
        android:background="@android:color/white"
        android:gravity="start"
        android:hint="说点什么吧..."
        android:inputType="textLongMessage|textMultiLine|textImeMultiLine"
        android:maxLength="150"
        android:paddingBottom="120dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:textColor="#333"
        android:textColorHint="#aaa"
        android:textSize="16sp"/>

</RelativeLayout>