            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5.0dip"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="14.0sp"/>
    </RelativeLayout>

</RelativeLayout>